FROM python:3.11-slim

WORKDIR /app

# Install Arcana
COPY pyproject.toml README.md ./
COPY src/ src/
RUN pip install --no-cache-dir .

# Install test utilities (psql for DB queries, procps for process management)
RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client procps && rm -rf /var/lib/apt/lists/*

# Copy test script
COPY scripts/integration_test.sh /app/scripts/integration_test.sh
RUN chmod +x /app/scripts/integration_test.sh

ENTRYPOINT ["/app/scripts/integration_test.sh"]
